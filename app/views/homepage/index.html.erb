<h1>Welcome to Showtime!</h1>
<p>How cool is this?</p>

<h1>Searching for - <%= @page_number %></h1>

<table border="1">
  <tr>
  	<th>Index</th>
  	<th>Title</th>
  	<th>Poster</th>
  	<th>Description</th>
  </tr>
  <% @results.each_with_index do |result, index| %>
    <tr>
      <td><%= "#{index+1}" %></td>
      <td><%= result["title"] %></td>
      <td><%= image_tag "https://image.tmdb.org/t/p/w342" + result["poster_path"]%></td>
      <td><%= result["overview"] %></td>
    </tr>
  <% end %>
</table>